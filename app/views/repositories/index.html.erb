<h1><%= @hello %></h1>
<div class="container text-center">
  <div class="row ">
      <% @repos_list.each do |repo| %>
      <div class="col-3 p-2">
        <div class="card flex" style="width: 100%; height: 100%">
          <div class="card-body">
            <h5 class="card-title"><%= repo["name"] %></h5>
            <p class="card-text"><%= repo["description"] %></p>
            <a href='<%= repo["html_url"] %>' class="btn btn-primary">Access Repo</a>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>